        cursor: pointer;
        font-weight: bold;
    }
    .addBtn { background: #00e6e6; color: black; }
    .editBtn { background: orange; color: black; }
    .deleteBtn { background: red; color: white; }
    .done { background: green; color: white; }
    ul {
        list-style: none;
        padding: 0;
